<section id="contacto" class="py-20 bg-white">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-center mb-4 korean-title text-red-600" data-aos="fade-up">Contacto</h2>
    <h3 class="text-xl text-center mb-12 text-gray-600" data-aos="fade-up">Tiene una consulta?</h3>
    <div class="max-w-4xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-8">
      <div class="space-y-6">
        <div>
          <h3 class="text-xl font-semibold mb-2">Ubicación</h3>
          <p class="text-gray-600">Av. Siempre Viva 1234</p>
        </div>
        <div>
          <h3 class="text-xl font-semibold mb-2">Contacto</h3>
          <p class="text-gray-600">Teléfono: +54 9 11 5555-1234</p>
          <p class="text-gray-600">Email: info@taeguktaekwondo.com</p>
        </div>
        <div>
          <h3 class="text-xl font-semibold mb-2">Redes Sociales</h3>
          <div class="flex gap-4">
            <a href="https://facebook.com/taeguktaekwondo" target="_blank" class="text-red-600 hover:text-red-700">
              Facebook
            </a>
            <a href="https://instagram.com/taeguktaekwondo" target="_blank" class="text-red-600 hover:text-red-700">
              Instagram
            </a>
          </div>
        </div>
      </div>
      <form class="space-y-4 bg-gray-50 p-6 rounded-lg shadow-md">
        <div>
          <label class="block text-sm font-medium text-gray-700">Nombre</label>
          <input type="text" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-red-500 focus:ring-red-500">
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700">Email</label>
          <input type="email" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-red-500 focus:ring-red-500">
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700">Mensaje</label>
          <textarea rows="4" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-red-500 focus:ring-red-500"></textarea>
        </div>
        <button type="submit" class="w-full bg-red-600 text-white px-4 py-2 rounded-md hover:bg-red-700 transition">
          Enviar Mensaje
        </button>
      </form>
    </div>
  </div>
</section></content>