---
import ImageModal from './ImageModal.astro';
import SwiperGallery from './SwiperGallery.astro';

const images = [
  {
    url: '/images/training6.jpeg',
    alt: 'Competencia',
    titulo: 'Competencia'
  },
  {
    url: '/images/training1.jpg',
    alt: 'Entrenamiento',
    titulo: 'Entrenamiento'
  },
  {
    url: '/images/training2.jpg',
    alt: 'Competencia',
    titulo: 'Competencia'
  },
  {
    url: '/images/training3.jpg',
    alt: 'Clase grupal',
    titulo: 'Clase grupal'
  },
  {
    url: '/images/training4.jpg',
    alt: 'Competencia',
    titulo: 'Competencia'
  },
  {
    url: '/images/training5.jpg',
    alt: 'Competencia',
    titulo: 'Competencia'
  }
];
---

<section class="py-20 bg-gray-50">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-center mb-12" data-aos="fade-up">Galería de Fotos</h2>
    <SwiperGallery images={images} />
    <ImageModal images={images} />
    <div class="text-center mt-12">
      <a 
        href="/galeria" 
        class="inline-block px-6 py-3 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition-colors duration-200"
        data-aos="fade-up"
        data-aos-delay="100"
      >
        Ver más fotos
      </a>
    </div>
  </div>
</section>