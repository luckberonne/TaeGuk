<section class="py-20 bg-gray-50">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-center mb-12" data-aos="fade-up">Galer√≠a de Fotos</h2>
    <div class="swiper" data-aos="fade-up" data-aos-delay="200">
      <div class="swiper-wrapper">
        <div class="swiper-slide">
          <img src="/images/training1.jpg" alt="Entrenamiento" class="w-full h-[800px] object-cover rounded-lg" />
        </div>
        <div class="swiper-slide">
          <img src="/images/training2.jpg" alt="Competencia" class="w-full h-[800px] object-cover rounded-lg" />
        </div>
        <div class="swiper-slide">
          <img src="/images/training3.jpg" alt="Clase grupal" class="w-full h-[800px] object-cover rounded-lg" />
        </div>
        <div class="swiper-slide">
          <img src="/images/training4.jpg" alt="Competencia" class="w-full h-[800px] object-cover rounded-lg" />
        </div>
      </div>
      <div class="swiper-pagination"></div>
      <div class="swiper-button-prev"></div>
      <div class="swiper-button-next"></div>
    </div>
  </div>
</section>

<script>
  import Swiper from 'swiper';
  import { Navigation, Pagination, Autoplay } from 'swiper/modules';
  import 'swiper/css';
  import 'swiper/css/navigation';
  import 'swiper/css/pagination';

  new Swiper('.swiper', {
    modules: [Navigation, Pagination, Autoplay],
    slidesPerView: 1,
    spaceBetween: 30,
    loop: true,
    autoplay: {
      delay: 5000,
    },
    pagination: {
      el: '.swiper-pagination',
      clickable: true,
    },
    navigation: {
      nextEl: '.swiper-button-next',
      prevEl: '.swiper-button-prev',
    },
  });
</script>

<style>
  .swiper {
    width: 100%;
    height: 800px;
  }
  :global(.swiper-button-next),
  :global(.swiper-button-prev) {
    color: #2563eb;
  }
  :global(.swiper-pagination-bullet-active) {
    background: #2563eb;
  }
</style>