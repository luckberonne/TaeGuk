---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Escuela de Taekwondo Taeguk - Formando campeones en la vida a travÃ©s de la disciplina, el respeto y el desarrollo personal." />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
    <link href="https://fonts.googleapis.com/css2?family=Black+Han+Sans&display=swap" rel="stylesheet">
  </head>
  <body>
    <slot />
    <script>
      import AOS from 'aos';
      AOS.init({
        duration: 800,
        once: true,
      });
    </script>
  </body>
</html>

<style is:global>
  :root {
    --accent: 220, 38, 38;
    --accent-light: 248, 113, 113;
    --accent-dark: 153, 27, 27;
  }
  html {
    font-family: system-ui, sans-serif;
    background: #ffffff;
  }
  
  .text-gradient {
    background: linear-gradient(315deg, rgb(var(--accent)) 25%, rgb(var(--accent-light)));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .korean-title {
    font-family: 'Black Han Sans', sans-serif;
  }

  .belt-border {
    position: relative;
  }

  .belt-border::before {
    content: '';
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 100px;
    height: 4px;
    background: linear-gradient(90deg, #fff 0%, #FFD700 35%, #FFD700 65%, #fff 100%);
  }

  .dobok-pattern {
    background-image: radial-gradient(circle, #f8fafc 30%, transparent 31%), 
                      radial-gradient(circle, transparent 35%, #f8fafc 36%);
    background-size: 80px 80px;
    background-position: center;
}

</style></content>