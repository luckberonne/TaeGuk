---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import WhatsAppButton from '../components/WhatsAppButton.astro';
import ImageModal from '../components/ImageModal.astro';

const imagenes = [
  {
    url: '/images/training1.jpg',
    alt: 'Clase Taekwondo Jovenes',
    titulo: 'Clase Taekwondo Jovenes'
  },
  {
    url: '/images/training2.jpg',
    alt: 'Clase Taekwondo',
    titulo: 'Clase Taekwondo'
  },
  {
    url: '/images/training3.jpg',
    alt: 'Clase Taekwondo',
    titulo: 'Clase Taekwondo'
  },
  {
    url: '/images/training4.jpg',
    alt: 'Clase Taekwondo',
    titulo: 'Imagen 4'
  },
  {
    url: '/images/training5.jpg',
    alt: 'Practica Salto',
    titulo: 'Practica Salto'
  },
  {
    url: '/images/training6.jpeg',
    alt: 'Titulo 3er Dan',
    titulo: 'Titulo 3er Dan'
  },
  {
    url: '/images/g1.jpg',
    alt: 'Rodolfo Descanso',
    titulo: 'Rodolfo'
  },
  {
    url: '/images/g2.jpg',
    alt: 'Patada',
    titulo: 'Patada'
  },
  {
    url: '/images/g3.jpg',
    alt: 'Salto',
    titulo: 'Salto'
  },
  {
    url: '/images/g4.jpg',
    alt: 'Postura',
    titulo: 'Postura'
  },
  {
    url: '/images/g5.jpg',
    alt: 'Postura 1',
    titulo: 'Postura 1'
  },
];
---

<Layout title="Escuela de Taekwondo - Taeguk">
  <Header />
  <main>
    <section class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 p-4 pt-32">
      {imagenes.map((imagen, index) => (
        <div class="bg-white rounded-lg overflow-hidden shadow-lg cursor-pointer" key={index}>
          <img 
            src={imagen.url} 
            alt={imagen.alt} 
            class="w-full h-64 object-cover gallery-image" 
          />
        </div>
      ))}
    </section>
  </main>
  <ImageModal images={imagenes} />
  <Footer />
  <WhatsAppButton />
</Layout>